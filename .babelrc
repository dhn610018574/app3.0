{
  "presets": [
    "react",
    "es2015",
    "stage-0"
  ],
  "env": {
    "development": {
      "plugins": [
        [
          "react-transform",
          {
            "transforms": [{
              "transform": "react-transform-hmr",
              "imports": [
                "react"
              ],
              "locals": [
                "module"
              ]
            }]
          }
        ]
      ]
    }
  },
  "plugins": [
    ["import", {
      "libraryName": "antd-mobile",
      "style": "css"
    }] // `style: true` 会加载 less 文件
  ]
}